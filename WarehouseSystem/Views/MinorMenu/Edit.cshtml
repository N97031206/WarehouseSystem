@model WarehouseSystem.Models.ViewModel.MinorMenuViewModel

@{
    ViewBag.Title = "Edit";
}

<script>

    $.fn.editable.defaults.mode = 'inline';

    $(document).ready(function () {
        // x-editable for user table
        $('#Name, #Action, #Controller, #Order').editable({
            ajaxOptions: {
                //dataType: 'json' //assuming json response
            },
            success: function (response, newValue) {

                // alert(response);
                //    // change update time
                //   // var date = new Date(response.LastUpdateTime);
                //  //  $('#lastUpdateTime').html(date);
            }
        });
    });
</script>

<div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>選單管理<small>次選單編輯</small></h1>
            <ol class="breadcrumb">
                @*<li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">選單管理</li>*@
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">編輯次選單</h3>
                        </div><!-- /.box-header -->
                        <a href="@Url.Action("Edit","SubMenu", new { SubMenuID = @Model.MinorMenu.SubMenuID })"><button class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-arrow-left"> 上一步</i></button></a>
                        <div class="box-body">
                            <table class="table table-striped table-hover table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th class="col-md-4">屬性</th>
                                        <th class="col-md-8">設定值</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr><td>次選單名稱</td><td><a href="#" id="Name" data-type="text" data-pk="@Model.MinorMenu.MinorMenuID" data-url="@Url.Content("Update")" data-title="輸入名稱">@Model.MinorMenu.Name</a></td></tr>
                                    <tr><td>順序</td><td><a href="#" id="Order" data-type="text" data-pk="@Model.MinorMenu.MinorMenuID" data-url="@Url.Content("Update")" data-title="輸入順序">@Model.MinorMenu.Order</a></td></tr>
                                    <tr><td>Action</td><td><a href="#" id="Action" data-type="text" data-pk="@Model.MinorMenu.MinorMenuID" data-url="@Url.Content("Update")" data-title="輸入Action">@Model.MinorMenu.Action</a></td></tr>
                                    <tr><td>Controller</td><td><a href="#" id="Controller" data-type="text" data-pk="@Model.MinorMenu.MinorMenuID" data-url="@Url.Content("Update")" data-title="輸入Controller">@Model.MinorMenu.Controller</a></td></tr>
                                </tbody>
                            </table>
                        </div>
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
</div><!-- ./wrapper -->