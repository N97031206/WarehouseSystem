@model WarehouseSystem.Models.ViewModel.UserViewModel

@{
    ViewBag.Title = "Login";
}
<script>
    function fieldValidation(field) {
        if ($.trim($(field).val()) == '') {
            $(field + 'Div').addClass('has-error');
            $(field + 'Div').val('');
            $('#ErrorMessage').text('欄位內容不得為空白');
            return false;
        }
        else {
            $(field + 'Div').removeClass('has-error');
        }
        return true;
    };
</script>

<div class="wrapper">

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>登入<small> 您的帳號 </small></h1>
            <ol class="breadcrumb">
                @*<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>*@
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">請輸入您的帳號及密碼</h3>
                        </div><!-- /.box-header -->
                        <!-- form start -->
                        <form role="form" method="post" action="@Url.Action("Login", "User")">
                            <div class="box-body">
                                <div class="form-group has-error">
                                    <label class="col-sm-10" id="ErrorMessage">@Model.ErrorMessage</label>
                                </div>
                            <br />
                                <div class="form-group">
                                    <label for="exampleInputEmail1">帳號</label>
                                    <input name="UserID" type="text" class="form-control" id="exampleInputEmail1" placeholder="輸入帳號">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">密碼</label>
                                    <input name="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="輸入密碼">
                                </div>
                            </div><!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">確定</button>
                            </div>
                        </form>
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
</div><!-- ./wrapper -->