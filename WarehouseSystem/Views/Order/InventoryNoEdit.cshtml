<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">盤點單號 - @Model.OrderNo</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal">
                        <div class="box-body">
                            <div id="Grp2" class="form-group">
                                <label for="OrderNo" class="col-sm-1 control-label" style="color: black">資料範圍</label>
                                <div class="col-sm-2">
                                    <select class="form-control" id="RangeSelect">
                                        @foreach (var item in @Model.List)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                </div>
                             </div>
                        </div><!-- /.box-body -->
                    </form>
                    <div id="theTable">
                        @Html.Partial("_Partial")
                    </div>
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
