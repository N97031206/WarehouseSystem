</script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>帳號管理<small>新增帳號</small></h1>
        <ol class="breadcrumb">
            @*<li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">Dashboard</li>*@
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">建立新的帳號</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" action="@Url.Action("CreateUserProfile")" onsubmit="return formValidation();">
                        <div class="box-body">
                            <div class="form-group has-error">
                                <label class="col-sm-2"></label>
                                <label class="col-sm-10" id="ErrorMessage">@Model.ErrorMessage</label>
                            </div>
                            <div id="SupIDDiv" class="form-group">
                                <label for="SupID" class="col-sm-2 control-label" style="color: Red">統編</label>
                                <div class="col-sm-10">
                                    <input id="SupID" type="text" class="form-control" name="SupID" placeholder="統編" value="@Model.SupplierProfile.SupID">
                                </div>
                            </div>
                            <div id="CompanyNameDiv" class="form-group">
                                <label for="CompanyName" class="col-sm-2 control-label" style="color: Red">供應商名稱</label>
                                <div class="col-sm-10">
                                    <input id="CompanyName" type="text" class="form-control" name="CompanyName" placeholder="輸入帳號" value="@Model.SupplierProfile.CompanyName">
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success">確定</button>
                        </div>
                    </form>
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->